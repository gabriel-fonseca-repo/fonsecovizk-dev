---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
    title: string;
    description: string;
}

const { title, description }: Props = Astro.props;

const images = ["/monster/tenma-one.png", "/monster/tenma-two.png", "/monster/tenma-three.png"];
---

<!doctype html>
<html class="w-full" lang="en">
    <head>
        <BaseHead title={title} description={description} />
    </head>
    <body class="w-full flex flex-col flex-nowrap place-items-center gap-4">
        <Header />
        <div class="flex flex-nowrap flex-col h-screen lg:flex-row">
            <div class="m-8 flex flex-row flex-nowrap lg:flex-col">
                {
                    images.map((image, index) => (
                        <div class={`${index % 2 == 0 ? "-rotate-12" : "rotate-12"} aspect-auto shadow-lg lg:w-52`}>
                            <img src={image} alt="" />
                        </div>
                    ))
                }
            </div>
            <main class="bg-white p-4 text-justify rounded-lg border-2 border-slate-600 mx-6 lg:mx-0 lg:max-w-[42rem]">
                <slot />
            </main>
        </div>
        <Footer />
    </body>
</html>

<style is:global>
    body,
    html {
        font-family: "Courier Prime", monospace;
    }

    body {
        height: 100vh;
        background-image: url("/monster/johan-left-side.png"), url("/monster/tenma-right-side.png");
        background-position:
            left top,
            right top;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: auto 100%;
        background-color: black;
    }

    @media (max-width: 1530px) {
        body {
            background-size:
                50vw auto,
                50vw auto;
            background-position:
                left center,
                right center;
        }
    }

    .main-sibling {
        width: calc(100% - 3rem);
    }

    @media (min-width: 1024px) {
        .main-sibling {
            width: 59rem;
        }
    }
</style>
